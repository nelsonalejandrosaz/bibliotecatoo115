<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">TOO115</property>
    <property name="hibernate.connection.password">ROOT</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <mapping resource="Models/Biblioteca.hbm.xml"/>
    <mapping resource="Models/Subcategoria.hbm.xml"/>
    <mapping resource="Models/Prestamo.hbm.xml"/>
    <mapping resource="Models/Categoria.hbm.xml"/>
    <mapping resource="Models/Recurso.hbm.xml"/>
    <mapping resource="Models/Persona.hbm.xml"/>
    <mapping resource="Models/Usuario.hbm.xml"/>
    <mapping resource="Models/Municipio.hbm.xml"/>
    <mapping resource="Models/Departamento.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
